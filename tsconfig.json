{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "sourceMap": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "*": [
        "*",
        "src/*"
      ],
      "src/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "src/types",
  ],
  "exclude": [
    "node_modules"
  ]
}